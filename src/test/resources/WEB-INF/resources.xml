<!-- 
	H2 and MySQL data source configurations for TomEE.
 -->
<resources>
	<Resource id="H2" type="javax.sql.DataSource">
		JdbcDriver org.h2.Driver
		JdbcUrl jdbc:h2:mem:test
		UserName sa
		Password sa
		jtaManaged = true
	</Resource>
	<Resource id="MySQL" type="javax.sql.DataSource">
		JdbcDriver com.mysql.jdbc.Driver
		JdbcUrl jdbc:mysql://localhost:3306/test?useUnicode=true&amp;characterEncoding=UTF-8
		UserName root
		Password 
		jtaManaged = true
	</Resource>
</resources>
